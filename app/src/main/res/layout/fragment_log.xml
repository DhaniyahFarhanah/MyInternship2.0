<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".NPISfragments.logFragment"
    android:background="@color/white"
    android:padding="8dp">

    <TextView
        android:id="@+id/dateSubmittedLogText"
        android:layout_width="279dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="DATE"
        android:textColor="#292929"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/daterightbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/dateSubmittedLogText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dateSubmittedLogText"
        app:layout_constraintTop_toTopOf="@+id/dateSubmittedLogText"
        app:srcCompat="@drawable/ic_round_arrow_roudedarrowright" />

    <ImageView
        android:id="@+id/dateleftbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/dateSubmittedLogText"
        app:layout_constraintEnd_toStartOf="@+id/dateSubmittedLogText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dateSubmittedLogText"
        app:srcCompat="@drawable/ic_round_roundedarrowleft" />

    <ScrollView
        android:layout_width="395dp"
        android:layout_height="400dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/border"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateSubmittedLogText"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/studentLogDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:hint="No Log Submitted"
            android:textColor="@color/black"
            android:textColorHint="#8B000000"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dateSubmittedLogText" />

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>